<p id="notice"><%= notice %></p>

<% if @locations.empty? %>
<div class="text-center">
  <h1>You dont have any branch Create a new branch</h1>
  <%= link_to 'Create New Branch', new_location_path , class: "btn btn-info btn-lg mt-4" %>
</div>
<% else %> 
<h1>Locations</h1>
<%= link_to 'Create New Branch', new_location_path, class: "btn btn-info btn-lg" %>


<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.address %></td>
        <td><%= location.latitude %></td>
        <td><%= location.longitude %></td>
        <td><%= link_to 'Show', location %></td>
        <td><%= link_to 'Edit', edit_location_path(location) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>


