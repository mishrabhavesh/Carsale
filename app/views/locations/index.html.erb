<p id="notice"><%= notice %></p>

<% if @locations.empty? %>
<h1>You dont have any branch Create a new branch</h1>

<% else %> 
<h1>Locations</h1>
<%= link_to 'Create New Branch', new_location_path %>


<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.address %></td>
        <td><%= location.latitude %></td>
        <td><%= location.longitude %></td>
        <td><%= link_to 'Show', location %></td>
        <td><%= link_to 'Edit', edit_location_path(location) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>


