<p id="notice"><%= notice %></p>

<h1>Tokens</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

  <%= link_to 'Create new token', new_token_path %>

<% if !logged_in?(:site_admin) %>
 
 <% if @mylist.empty? %>
      <h1>You dont have any appointment. Why don't create a new one</h1>
  <% else %> 
    <% @mylist.each do |list| %>
      
  <tr>
    <td> <%= list.id %> </td>
    <td>  <%= list.phoneno %></td>
    <td>  <%= time_ago_in_words(list.created_at) %></td>
    <td>  <%= list.status %></td>
    <td>  <% list.id %></td>
  </tr>
    <%end%>
    <%end%>
  <% end %>

<% if logged_in?(:site_admin) %> 
   <% @tokens.each do |token| %>
      <tr>
        <td><%= token.phoneno %></td>
        <td><%= token.status %>  </td>
        <td><%= link_to 'Show', token %></td>
        <td><%= link_to 'Edit', edit_token_path(token) %></td>
        <td><%= link_to 'Destroy', token, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

<% end %>



  </tbody>
</table>

