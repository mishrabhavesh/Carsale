<%= form_with(model: model, local: true) do |form| %>
  <%= render 'shared/error', obj: @model %>

 <div class="field card-body">
    <%= form.label :name  %>
    <%= form.text_field :name, placeholder: 'Enter model Name' %>
  </div>

  <div class="field card-body">
  <h2>Select brand associated with model</h2>
    <%= collection_select(:model, :brand_id, Brand.all, :id, :name, {},  {class: 'form-control '}) %>
  </div>

  <div class="actions text-center">
    <%= form.submit class: 'btn btn-success' %>
  </div>
<% end %>
