<h1 class="text-center card-header">Model index </h1>

<div class="card-header text-center">
  <%= link_to 'Add new Model', new_model_path , class: 'btn btn-primary my-4' %>
</div>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Edit</th>
      <th>Destroy</th>
    </tr>
  </thead>
  <tbody>
  <% @models.each do |model| %>
    <tr>
      <td><%= model.name  %></td>
      <td><%= link_to 'Edit', edit_model_path(model), class: 'btn btn-warning '  %></td>
      <td><%= link_to 'Destroy', model, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger '  %></td>
    </tr>
  <% end %>
  </tbody>
</table>