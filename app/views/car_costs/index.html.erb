<p id="notice"><%= notice %></p>

<h1>Carcosts</h1>

<%= link_to 'New Car Cost', new_car_cost_path, class: "btn btn-info my-4" %>

<table>
  <thead>
  <tr>
    <th>Condition</th>
    <th>Price</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @carcosts.each do |carcost| %>
    <tr>
    <td><%= carcost.condition %></td>
    <td><%= carcost.price %></td>
    <td><%= link_to 'Edit', edit_car_cost_path(carcost) %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

